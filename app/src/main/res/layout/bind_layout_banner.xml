<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.gucodero.androidjetpack.ui.components.binding.BannerUIEntity" />
    </data>
    <com.gucodero.androidjetpack.ui.components.Banner
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@{data.radius}"
        app:text="@{data.text}"
        app:borderWidth="@{data.borderWidth}"
        app:borderColor="@{data.borderColor}"/>
</layout>